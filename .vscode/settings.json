{
  "typescript.preferences.includePackageJsonAutoImports": "on",
  "editor.codeActionsOnSave": {
    "source.organizeImports": "explicit"
  },
  "files.associations": {
    "*.env.local": "properties"
  },
  "editor.rulers": [80, 120],
  "search.exclude": {
    "**/node_modules": true,
    "**/.next": true,
    "**/build": true
  }
}
